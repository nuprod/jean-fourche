<odoo>

  <record id="action_quality_alerts_from_supplier" model="ir.actions.act_window">
    <field name="name">Quality Alerts</field>
    <field name="res_model">quality.alert</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[('partner_id', '=', active_id)]</field>
    <field name="context">{'default_partner_id': active_id}</field>
  </record>

  <record id="res_partner_form_inherit_quality_alert" model="ir.ui.view">
    <field name="name">res.partner.form.inherit.quality.alert</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@name='button_box']" position="inside">

        <!-- Important: supplier_rank doit être présent dans la vue (ici on l’ajoute invisible) -->
        <field name="supplier_rank" invisible="1"/>

        <button type="action"
                name="%(action_quality_alerts_from_supplier)d"
                class="oe_stat_button"
                icon="fa-check-square"
                invisible="supplier_rank == 0">
          <field name="quality_alert_count" widget="statinfo" string="Quality Alerts"/>
        </button>

      </xpath>
    </field>
  </record>

</odoo>
