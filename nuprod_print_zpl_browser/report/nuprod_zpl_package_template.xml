<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="nuprod_package_template_zpl">
            <t t-foreach="docs" t-as="package">
                <t t-translation="off">
                <t t-set="lineHeight" t-value="50"/>
                ^XA^CI28
                <t t-if="package.quant_ids">
                    <t t-foreach="package.quant_ids" t-as="quant" t-key="quant_id">
                        ^FO150,<t t-out="lineHeight"/>
                        ^A0N,44,33^FDProduit: <t t-out="quant.product_id.display_name"/>^FS
                        <t t-set="lineHeight" t-value="lineHeight + 50"/>
                        ^FO150,<t t-out="lineHeight"/>
                        ^A0N,44,33^FDQuantite: <t t-out="quant.quantity"/> <t t-out="quant.product_uom_id.name"/>^FS
                        <t t-set="lineHeight" t-value="lineHeight + 50"/>
                    </t>
                </t>
                ^FO150,<t t-out="lineHeight"/>
                ^A0N,44,33^FDPalette: <t t-out="package.name"/>^FS
                <t t-set="lineHeight" t-value="lineHeight + 50"/>
                ^FO150,<t t-out="lineHeight"/>
                <t t-if="package.pack_date">
                    ^A0N,44,33^FDDate d'emballage: <t t-out="package.pack_date" t-options='{"widget": "date"}'/>
                    ^FS
                    <t t-set="lineHeight" t-value="lineHeight + 50"/>
                </t>
                ^FO15,50^BY3
                ^BON,4,N,104
                ^FD<t t-out="package.name"/>^FS
                ^XZ
                </t>
            </t>
        </template>
    </data>
</odoo>
