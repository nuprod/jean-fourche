<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="nuprod_print_zpl_view_product_template_tree" model="ir.ui.view">
      <field name="name">nuprod.print.zpl.view.product.template.tree</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_tree_view"/>
      <field name="arch" type="xml">
        <xpath expr="//header" position='inside'>
          <button name="action_nuprod_print_product_zpl" string="Impression ZPL" class="oe_highlight" type="object" />
        </xpath>
      </field>
    </record>

    <record id="nuprod_print_zpl_view_product_template_form" model="ir.ui.view">
      <field name="name">nuprod.print.zpl.view.product.template.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
          <button name="action_nuprod_print_product_zpl" string="Impression ZPL" type="object" class="oe_highlight"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>
