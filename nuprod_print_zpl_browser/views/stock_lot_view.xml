<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="nuprod_print_zpl_view_lot_tree" model="ir.ui.view">
            <field name="name">nuprod.print.zpl.view.lot.tree</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <header>
                        <button string="Impression ZPL" class="oe_highlight" type="object" name="action_nuprod_print_lot_zpl" />
                    </header>
                </xpath>
            </field>
        </record>

        <record id="nuprod_print_zpl_view_lot_form" model="ir.ui.view">
            <field name="name">nuprod.print.zpl.view.lot.form</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button string="Impression ZPL" class="oe_highlight" type="object" name="action_nuprod_print_lot_zpl" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>
