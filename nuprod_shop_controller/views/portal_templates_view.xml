<odoo>
    <!-- Hérite de la vue de la page du portail utilisateur -->
    <template id="custom_portal_link" inherit_id="portal.portal_my_home">
        <!-- Ajouter un nouveau lien après le bloc existant portal_common_category -->
        <xpath expr="//div[@id='portal_alert_category']" position="replace">
        </xpath>
        <xpath expr="//div[@id='portal_client_category']" position="before">
            <div class="o_portal_category row g-2 mt-3" id="portal_common_shop">
                <t t-call="portal.portal_docs_entry" />
                <t t-call="portal.portal_docs_entry">
                    <t t-set="icon" t-value="'/nuprod_shop_controller/static/src/img/box.png'"/>
                    <!-- <img src="/enterprise/iot/static/src/img/box.svg" alt="image boite de commerce"/> -->
                    <t t-set="title">Saisir une commande</t>
                    <t t-set="text">Rendez-vous sur la boutique en ligne</t>
                    <t t-set="url" t-value="'/shop'" />
                    <t t-set="config_card" t-value="True" />
                </t>
            </div>
        </xpath>
    </template>
</odoo>